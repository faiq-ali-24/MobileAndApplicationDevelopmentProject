<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileHeaderImageView"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/profileheader" />

        <TextView
            android:id="@+id/profileSettingsTextView"
            android:layout_width="match_parent"
            android:textSize="36sp"
            android:layout_marginTop="-55dp"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Settings" />

        <TextView
            android:id="@+id/profileGeneralSettingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="General Setting"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profileWishListButton"
            android:layout_width="354dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/favorite_24px"
            android:drawableEnd="@drawable/chevron_right_24px"
            android:text="My Wishlist"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/profileNotificationButton"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/notifications_24px"
                android:text="Get Notification"
                android:textColor="@android:color/black" />

            <Switch
                android:id="@+id/toggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="41dp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

        <Button
            android:id="@+id/profileRateButton"
            android:layout_width="354dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/star_24px"
            android:drawableEnd="@drawable/chevron_right_24px"
            android:text="Rate the app"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/profilePrivacyButton"
            android:layout_width="354dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/article_24px"
            android:drawableEnd="@drawable/chevron_right_24px"
            android:text="Privacy and Term"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/profileTermButton"
            android:layout_width="354dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/description_24px"
            android:drawableEnd="@drawable/chevron_right_24px"
            android:text="Terms and Conditions"
            android:textColor="@android:color/black" />
    </LinearLayout>
</ScrollView>
