<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signUpSamaanMainLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/samaanmainlogo" />

    <TextView
        android:id="@+id/signUpFirstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:text="First Name"
        android:padding="6dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signUpFirstNameInputView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:ems="10"
        android:inputType="text"
        android:padding="16dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/signUpLastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:text="Last Name"
        android:padding="6dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signUpLastNameInputView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:ems="10"
        android:inputType="text"
        android:padding="16dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/signUpEmailView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint = "Enter your email"
        android:padding="16dp" />

    <EditText
        android:id="@+id/signUpPasswordPasswordView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint = "Enter your password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/signUpPrivacyTermsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="By signing up, you agree to our Privacy and Term" />

    <Button
        android:id="@+id/signUpSignUpButton"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_gravity="center|center_horizontal"

        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_greenish_blue"
        android:gravity="center|center_horizontal"
        android:text="Create an account"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/signUpOrTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:text="Or" />

    <TextView
        android:id="@+id/signUpSignInTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_greenish_blue"
        android:text="Login to your account" />

</LinearLayout>